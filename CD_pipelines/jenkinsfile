pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
        AWS_REGION = "us-east-1"
    }

    stages {
        stage('gitcheckout') {
            steps {
            checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Pritam-Khergade/ot-ms-kubernetes.git']])
                }
        }
        stage('credentials') {
            steps {
            sh '''
            set -e
                mkdir -p .aws
                echo "[ops-main]" > ~/.aws/config
                echo "region = ${AWS_REGION}" >> ~/.aws/config
                echo "output = json"  >> ~/.aws/config
                echo "[ops-main]" > ~/.aws/credentials
                echo "region = ${AWS_REGION}" >> ~/.aws/credentials
                echo "output = json" >> ~/.aws/credentials
                echo "aws_access_key_id = ${AWS_ACCESS_KEY_ID}" >> ~/.aws/credentials
                echo "aws_secret_access_key = ${AWS_SECRET_ACCESS_KEY}" >> ~/.aws/credentials
               '''
            }
        }
        stage('deploy') {
            steps {
                sh ''' aws eks update-kubeconfig --name ot-microservice-cluster
                ls -al 
                cd forntend/
                kubectl apply -f  deployment.yaml
                kubectl apply -f  service.yaml
                '''
            }
        }
        
    }
}
